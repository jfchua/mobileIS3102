<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="60dp">
        <Button
            android:id="@+id/findSelected1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tickets That You Have Selected" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket List"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewTicket">
        </ListView>

        <LinearLayout android:id="@+id/LinearLayout01"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_gravity="right"
            android:layout_margin="5dip">
            <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ButtonRemoveFromCart"
                android:text="Remove from Cart"></Button>
            <Button android:id="@+id/proceedToCheckOut" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Proceed to Checkout"></Button>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>